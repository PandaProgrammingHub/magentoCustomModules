<?xml version="1.0"?>

<config>
    <modules>
        <Fedobe_Notificationbar>
            <version>1.0.0</version>
        </Fedobe_Notificationbar>
    </modules>
    
    <global>
        <blocks>
            <notificationbar>
                <class>Fedobe_Notificationbar_Block</class>
            </notificationbar>
        </blocks>

        <helpers>
        <notificationbar>
            <class>Fedobe_Notificationbar_Helper</class>
        </notificationbar>
        </helpers>

         <models>
            <notificationbar>
                <class>Fedobe_Notificationbar_Model</class>
            </notificationbar>   
        </models>

    </global>
    <frontend>
        <layout>
            <updates>
                <notificationbar>
                    <file>notificationbar.xml</file>
                </notificationbar>
            </updates>
        </layout>
    </frontend>
   
   

    <adminhtml>
      <layout>
            <updates>
                <notificationbar>
                    <file>color_picker.xml</file>
                </notificationbar>
            </updates>
         </layout>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <design>
                                            <title>Store Theme Color Module Section</title>
                                        </design>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
