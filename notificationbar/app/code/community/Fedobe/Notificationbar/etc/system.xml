<?xml version="1.0"?>
<config>
    <sections>
        <design>
            <groups>
                <notificationbar translate="label">
                    <label>Notification Bar</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        
                        <basic_style_heading translate="label">
                           <label><![CDATA[<div style="text-align:center;margin: 20px 0 0 0;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;BESIC SETTINGS<div style="position: absolute;"><img id="basic_design_block" src="" alt="" border="0" /></div>&nbsp;<script>$('basic_design_block').src = SKIN_URL + "images/fedobe/notificationbar/title_red.png";</script></div>]]></label>
                           <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                           <sort_order>1</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>1</show_in_store>
                       </basic_style_heading>
                         <display translate="label">
                            <label>Notification Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </display>
                        <content translate="label comment">
                            <label>Notification Content</label>
                            <comment>Enter notification content here which is dispaly in notification bar.HTML is allowed. </comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </content>
                        

                        
                        <custom_style_heading translate="label">
                           <label><![CDATA[<div style="text-align:center;margin: 20px 0 0 0;">&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;CUSTOM STYLE SETTINGS<div style="position: absolute;"><img id="custom_design_block" src="" alt="" border="0" /></div>&nbsp;<script>$('custom_design_block').src = SKIN_URL + "images/fedobe/notificationbar/title_red.png";</script></div>]]></label>
                           <frontend_model>adminhtml/system_config_form_field_heading</frontend_model>
                           <sort_order>6</sort_order>
                           <show_in_default>1</show_in_default>
                           <show_in_website>1</show_in_website>
                           <show_in_store>1</show_in_store>
                       </custom_style_heading>

                       <bg_color translate="label comment">
                            <label>Background Color</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>
                            notificationbar/adminhtml_config_form_field_colorpicker
                            </frontend_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>color</validate> 
                        </bg_color>
                        <text_color translate="label comment">
                            <label>Text Color</label>
                           <frontend_type>select</frontend_type>
                            <frontend_model>notificationbar/adminhtml_config_form_field_colorpicker</frontend_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>color</validate> 
                        </text_color>

                        <text_fornt_size translate="label comment">
                            <label>Text Font Size</label>
                            <comment>Enter Text Font Size e.g. 16px </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </text_fornt_size>

                        <border_shadow translate="label comment">
                            <label>Border Shadow color</label>
                            <frontend_type>select</frontend_type>
                            <frontend_model>
                            notificationbar/adminhtml_config_form_field_colorpicker
                            </frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <validate>color</validate> 
                        </border_shadow>
                        

                       <height translate="label comment">
                            <label>Height</label>
                            <comment>Enter height e.g. 40px </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>12</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </height>
                        <width translate="label comment">
                            <label>Width</label>
                            <comment>Enter height e.g. 400px </comment>
                            <frontend_type>text</frontend_type>
                            <sort_order>13</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </width>
                       
                    </fields>
                </notificationbar>
            </groups>
        </design>
    </sections>
</config>
