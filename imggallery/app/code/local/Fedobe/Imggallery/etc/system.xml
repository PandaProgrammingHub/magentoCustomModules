<?xml version="1.0" encoding="UTF-8"?>
<config>
    <tabs>
        <imggallery translate="label" module="imggallery">
            <label>Fedobe</label>
            <sort_order>99999</sort_order>
        </imggallery>
    </tabs>
    <sections>
        <imggallery translate="label" module="imggallery">
            <label>Image Gallery</label>
            <tab>imggallery</tab>
            <frontend_type>text</frontend_type>
            <sort_order>1</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general_settings translate="label" module="imggallery">
                    <label>General Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <loadjs translate="label">
                            <label>Load JQuery Liberary</label>
                            <comment><![CDATA[Select YES if JQuery library in not included in your Magento Project]]></comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </loadjs>
                        <order translate="label">
                            <label>Select Order</label>
                            <comment><![CDATA[Select the Sorting Order of the image in the gallery]]></comment>
                            <frontend_type>select</frontend_type>
			    <source_model>imggallery/source_order</source_model>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </order>
                    </fields>
                </general_settings>
            </groups>
        </imggallery>
    </sections>
</config>