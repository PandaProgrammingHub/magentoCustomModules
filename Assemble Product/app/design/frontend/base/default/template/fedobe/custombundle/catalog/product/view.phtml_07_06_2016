<script type="text/javascript">
function my_implode_js(separator,array){
       var temp = '';
       for(var i=0;i<array.length;i++){
           temp +=  array[i] 
           if(i!=array.length-1){
                temp += separator  ; 
           }
       }//end of the for loop

       return temp;
}
 jQuery.fn.filterByText = function(textbox, selectSingleMatch) {
  return this.each(function() {
    var select = this;
    var options = [];
    jQuery(select).find('option').each(function() {
      options.push({value: jQuery(this).val(), text: jQuery(this).text()});
    });
    jQuery(select).data('options', options);
    jQuery(textbox).bind('change keyup', function() {
      var options = jQuery(select).empty().scrollTop(0).data('options');
      var search = jQuery.trim(jQuery(this).val());
      var regex = new RegExp(search,'gi');
 
      jQuery.each(options, function(i) {
        var option = options[i];
        if(option.text.match(regex) !== null) {
          jQuery(select).append(
             jQuery('<option>').text(option.text).val(option.value)
          );
        }
      });
      if (selectSingleMatch === true && 
          jQuery(select).children().length === 1) {
        jQuery(select).children().get(0).selected = true;
      }
    });
  });
};


/*==========Adding Active Class Product Options================*/
 jQuery(function ($) {
     $('#menu').on('click','.nav', function ( e ) {
        e.preventDefault();
         var not_allow = this.readAttribute('data-reveal-id');
         var postion = this.readAttribute('data-postion');
        if(not_allow != "myModal"){
        $(this).parents('#menu').find('.sort-active').removeClass('sort-active').end().end().addClass('sort-active');
        $(".bundle-option-block" ).addClass('bundle-option-div-display-none'); 
        $("#bundle-option-div-"+postion).removeClass('bundle-option-div-display-none');
       }
        
    }); 
});
 /*========hide and show bundel options=================*/
  
     jQuery(function ($) {
      $(".bundel-option-next").click(function(){
         var isRequired = this.readAttribute('data-required');
         var optionId = this.readAttribute('data-optionId');
                  
         var currentOptionPostion = parseInt(this.readAttribute('data-position')); 
         var addOptionPostion = parseInt(1);
         var nextOptionPostion = currentOptionPostion + addOptionPostion;
         var currentOptionName = this.readAttribute('data-optionName');
         //var item_width = ;
         //console.log(item_width); 
          var elmnt = document.getElementById("myDIV");
           
         
        if(isRequired == 1){
             var chcekboxname="bundle_option["+optionId+"]";
             var favorite = [];
            /*
             $.each($("input[name='"+chcekboxname+"']:checked"), function(){            
                favorite.push($(this).val());
            });
            alert("My favourite sports are: " + favorite.join(", "));*/
            if ($("input[name='"+chcekboxname+"']:checked").length > 0){
            //if(values){
                           $("#bundle-option-div-"+currentOptionPostion).addClass('bundle-option-div-display-none');
                           $("#bundle-option-div-"+nextOptionPostion).removeClass('bundle-option-div-display-none');
                           $("#bundle-option-lable-"+nextOptionPostion).removeAttr('data-reveal-id');
                           $("#bundle-option-lable-"+nextOptionPostion).addClass('sort-active');
                           $("#bundle-option-lable-"+currentOptionPostion).removeClass('sort-active');
                          // $("#menu li").animate({marginRight: "+="+item_width}, 1000);
                          //$("#menu ul").scrollLeft(140,0);
                          elmnt.scrollLeft += 140;

                           
                           
                      
               }
               else{
                     alert("please choose at least one product Of "+currentOptionName);
               }
          }
     else {
                           
                           $("#bundle-option-div-"+currentOptionPostion).addClass('bundle-option-div-display-none');
                           $("#bundle-option-div-"+nextOptionPostion).removeClass('bundle-option-div-display-none');
                           $("#bundle-option-lable-"+nextOptionPostion).removeAttr('data-reveal-id');
                           $("#bundle-option-lable-"+nextOptionPostion).addClass('sort-active');
                           $("#bundle-option-lable-"+currentOptionPostion).removeClass('sort-active');
                          // $("#menu li").animate({marginRight: "+="+item_width}, 1000);
                          //$("#menu ul").scrollLeft(140,0);
                          elmnt.scrollLeft += 140;
                            
        }

      
});
 
});
  jQuery(function($){
        $('input[type="checkbox"]').on('change', function() {
        $('input[name="' + this.name + '"]').not(this).prop('checked', false);
        var currentOptionName = this.readAttribute('data-optionName');
         currentOptionName = currentOptionName.split(" ");
         var str = my_implode_js('_',currentOptionName);
         $("."+str).show();
        });
});
</script>



