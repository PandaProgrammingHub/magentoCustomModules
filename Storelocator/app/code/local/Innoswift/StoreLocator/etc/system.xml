<config>
    <tabs>
        <innoswift translate="label" module="storelocator">
            <label>Innoswift</label>
            <sort_order>400</sort_order>
        </innoswift>
    </tabs>
    <sections>
        <storelocation translate="label" module="storelocator">
            <label>Storelocator</label>
            <tab>innoswift</tab>
            <frontend_type>text</frontend_type>
            <sort_order>302</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <settings translate="label">
                    <label>Map Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>10</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <location_view translate="label">
                            <label>Location View</label>
                            <frontend_type>select</frontend_type>
                            <source_model>storelocator/adminhtml_system_config_source_location_view</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </location_view>
                        <zoom_level translate="label">
                            <label>Map Zoom Level</label>
                            <frontend_type>text</frontend_type>                           
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Number only</comment>
                        </zoom_level>
                        <custom_search translate="label">
                            <label>Custom Search</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </custom_search>
                        <map_before_search translate="label">
                            <label>Map Befor Search</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </map_before_search>
                        <radius_options translate="label">
                            <label>Set Radius</label>
                            <frontend_type>text</frontend_type>                           
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>place numbers in (,)comma separeted</comment>
                        </radius_options>
                    </fields>
                </settings>                
            </groups>
        </storelocation>
    </sections>
</config>